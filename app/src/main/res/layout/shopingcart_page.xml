<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/shopingCartHeading"
        android:layout_width="120dp"
        android:layout_height="32dp"
        android:layout_marginStart="174dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="169dp"
        android:text="@string/shopingCart_heading"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/shopingCartList"
        android:layout_width="416dp"
        android:layout_height="581dp"
        android:layout_marginTop="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shopingCartHeading" />

    <Button
        android:id="@+id/shopingCartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="146dp"
        android:layout_marginEnd="156dp"
        android:layout_marginBottom="40dp"
        android:text="@string/shopingCart_finish_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shopingCartList" />

    <Button
        android:id="@+id/backToMenu"
        android:layout_width="102dp"
        android:layout_height="54dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="2dp"
        android:text="@string/back_to_menu"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>